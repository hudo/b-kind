@model BKind.Web.Features.Stories.Contracts.ReadStoryViewModel
   
<div class="card mb-4">
    <div class="card-body">
        <h2 class="mb-4">@Model.Story.Title</h2>
        @if (Model.Story.HasPhoto())
        {
            <img src="@Model.PhotoUrl" width="400" class="mr-4" align="left"/>
        }
        <div class="card-text mb-4">
            @Model.Story.Content
        </div>
        <p class="card-text">
            written by <a asp-controller="stories" asp-action="list" asp-route-author="@Model.Story.AuthorName">@Model.Story.AuthorName</a>
            on @Model.Story.Created.ToShortDateString()
        </p>
        <p class="card-text text-muted">
            Tags: @string.Join(", ", Model.Story.Tags)<br />
            Likes: @Model.Story.ThumbsUp
            @await Component.InvokeAsync("StoryButtons", new { story = Model.Story, userWithRoles = Model.LoggedUser })
        </p>

    </div>
</div>
